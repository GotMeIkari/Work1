#include <stdio.h> 
#include <locale.h> 
 
int main() { 
   int number; 
   float sum=0.0, number1, number2; 
   printf("\n Введите значение числа n: "); 
   scanf ("%d", &number); 
   for(number2=1.0;number2<=number;number2++) { 
      number1=1/number2; 
      sum = sum +number1; 
    } 
    printf("\n Сумма значений 1/1 + 1/2 +... + l/%d = %.2f", number, sum); 
 }
